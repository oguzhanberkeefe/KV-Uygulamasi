<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OzelKUygulamasi">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ozel_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <include
            android:id="@+id/ozel_K_Uygulamasi_toolbar"
            layout="@layout/app_bar_layout">
        </include>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/ozel_ana_sekmeler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/kahverengi2">

        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ozel_ana_sekmeler_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ozel_appBarLayout"
        >
    </androidx.viewpager.widget.ViewPager>
</RelativeLayout>