<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="310dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="50dp"
    app:cardCornerRadius="10dp">
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/product_img_id"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:background="#535252"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/product_title_id"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/prdouct_image_time_id"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_access_time_24121"
            android:layout_gravity="center"
            android:layout_marginLeft="-75dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/product_time_id"
            android:textColor="#676767"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time dk"
            android:layout_marginTop="-22dp"/>

        <TextView
            android:id="@+id/product_category_id"
            android:textColor="#131313"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category   |"
            android:layout_marginTop="35dp"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>
