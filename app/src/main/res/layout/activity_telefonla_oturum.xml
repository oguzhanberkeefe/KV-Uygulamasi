<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelefonlaOturumActivity">

    <EditText
        android:id="@+id/telefon_numarasi_girdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/girdiler"
        android:padding="10dp"
        android:hint="Telefon Numaranızı Yazınız..."
        android:drawableStart="@drawable/ic_baseline_smartphone_24"
        android:textAlignment="center"
        android:textStyle="bold">
    </EditText>

    <EditText
        android:id="@+id/dogrulama_kodu_girdisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/girdiler"
        android:padding="10dp"
        android:hint="Doğrulama Kodu"
        android:drawableStart="@drawable/ic_baseline_message_24"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/dogrulama_kodu_gonder_buttonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doğrulama Kodunu Gönder"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonlar"
        android:textColor="@android:color/background_light"
        android:layout_below="@id/dogrulama_kodu_girdisi"/>

    <Button
        android:id="@+id/dogrulama_buttonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Onayla"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonlar"
        android:textColor="@android:color/background_light"
        android:layout_below="@id/dogrulama_kodu_girdisi"
        android:visibility="invisible"/>

</RelativeLayout>