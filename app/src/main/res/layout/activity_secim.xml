<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecimActivity">


    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/image_silder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:sliderAnimationDuration="1000"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="15"
        app:sliderStartAutoCycle="true"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_menu_24"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="20dp"/>


    <Button
        android:clickable="true"
        android:id="@+id/UyeOl"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="420dp"
        android:text=" Hemen Uye Ol "
        android:textAllCaps="false"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <TextView
        android:clickable="true"
        android:id="@+id/zatenhesabimvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6E6D6D"
        android:text="Zaten Hesabınız Var Mı ?"
        android:layout_below="@id/UyeOl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:clickable="true"
        android:id="@+id/Uyeolmadandevamet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yada"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/uyeolmadan"
        android:textColor="#6E6D6D"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zatenhesabimvar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Ya da"
        android:textColor="#555252"
        android:textSize="16dp"
        android:textStyle="bold" />


</RelativeLayout>